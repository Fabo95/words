{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "target": "es2019",
    "lib": ["esnext", "es2019", "es2018"],
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@styleguide/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "typings/eslintModuleUtils.d.ts"],
  "exclude": ["./node_modules"]
}

